{
  "scripts": {
    "test_": "jest",
    "lint": "eslint .",
    "precommit": "lint-staged",
    "coverage": "react-scripts test --coverage --coverageDirectory=coverage --watchAll=false",
    "lint__": "tsc --noEmit && eslint src/*/.ts src/*/.tsx --max-warnings 0 ",
    "prepare": "npx husky install",
    "pre-commit": "npm run lint && npm test",
    "test":"jest",
    "lint-staged": "lint-staged"  
  },
  "devDependencies": {
    "eslint": "^9.26.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.2"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  }, 
  "jest": {
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "ng lint ng test",
      "pre-push": "ng lint ng test"
    }
  }
}
