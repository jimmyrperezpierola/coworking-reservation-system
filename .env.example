# backend/.env.example

# ======================================
#         CONFIGURACIÓN GENERAL
# ======================================
PORT=5000
NODE_ENV=development

# ======================================
#         BASE DE DATOS (PostgreSQL)
# ======================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=coworking_db
DB_USER=coworking_user
DB_PASS=your_secure_password

# ======================================
#           AUTENTICACIÓN (JWT)
# ======================================
JWT_SECRET=your_ultra_secure_secret_key_here
JWT_EXPIRES_IN=1d

# ======================================
#              CORS
# ======================================
FRONTEND_URL=http://localhost:3000

# frontend/.env.example

# Configuración de la API
VITE_API_URL=http://localhost:5000/api

# Configuración de la aplicación
VITE_APP_NAME=Coworking Reservas
VITE_DEFAULT_LANGUAGE=es
VITE_SESSION_TIMEOUT=30 # minutos

# Configuración de mapas (opcional)
VITE_MAPBOX_API_KEY=your_mapbox_api_key_here

# Configuración de analytics (opcional)
VITE_GA_TRACKING_ID=UA-XXXXX-Y

# Configuración de entorno
VITE_ENV=development